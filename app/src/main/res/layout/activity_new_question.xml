<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/new_question_survey_label" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/new_question_content_input"
        android:hint="@string/new_question_content" />

    <Button
        android:id="@+id/add_question"
        style="@style/ParseLoginUI.Button"
        android:layout_marginTop="8dp"
        android:text="@string/new_question_add_button_label" />

    <Button
        android:id="@+id/finish_question"
        style="@style/ParseLoginUI.Button"
        android:layout_marginTop="@dimen/com_parse_ui_small_vertical_spacing"
        android:layout_gravity="bottom"
        android:text="@string/new_question_finish_button_label" />

</LinearLayout>
